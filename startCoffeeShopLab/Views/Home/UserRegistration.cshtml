
@{
    ViewBag.Title = "UserRegistration";
}
<script src="~/Scripts/formValidation.js"></script>
<h2>User Registration</h2>

<form action="/Home/AddUser" method="post">
    <label class="control-label">First Name</label> <input id="FN" type="text" name="FirstName" class="form-control" onkeyup="ValidateFirstName()" />
    <p id="message"></p>
    <label class="control-label">Last Name</label> <input id="LN" type="text" name="LastName" class="form-control" onkeyup="ValidateLastName()" />
    <p id="message2"></p>
    <label class="control-label">Email</label> <input id="EM" type="email" name="Email" class="form-control" onkeyup="ValidateEmail()" />
    <p id="message3"></p>
    <label class="control-label">Phone Number</label> <input id="PN" type="text" name="PhoneNumber" class="form-control" onkeyup="ValidatePhoneNumber()" />
    <p id="message4"></p>
    <label class="control-label">Password</label> <input id="PWD" type="password" name="Password" class="form-control" onkeyup="ValidatePassword()" />
    <p id="message5"></p>
    <label class="control-label">Date</label> <input id="DT" type="text" name="Date" class="form-control" onkeyup="ValiDate()" />
    <p id="message6"></p>
    <label class="control-label">Age</label> <input id="AGE" type="text" name="Age" class="form-control" onkeyup="ValidateAge()" />
    <p id="message7"></p>
    <label class="control-label">SSN</label> <input id="SSN" type="text" name="SSN" class="form-control" onkeyup="ValidateSSN()" />
    <p id="message8"></p>
    <input type="submit" value="Register" class="btn-default" />
</form>
